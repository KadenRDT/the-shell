        <% for @post in @posts %>
        <div class="panel panel-default">
            <div class="panel-body">
                <p><%= @post.content %></p>
            </div>
        </div>
        <% end %>
    </div>
    <div class="col-xs-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <p>Who To Follow</p>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                <p>Popular</p>
            </div>
        </div>
    </div>
</div>